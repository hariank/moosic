doctype html
html
	head
		title= title
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css')
		link(rel='stylesheet', href='/css/style.css')
		link(rel='stylesheet', href='/css/animate.min.css')
		link(rel="icon", href="favicon.ico", type="image/x-icon")

	body
		.container
			.row
				.header
					.center-align
						h2= title
						img(src='/img/cow.jpg', width=85)
						span 
							text concocted by #[a(href='https://github.com/hariank', target='_blank') hariank]
				.tagline.center-align
					.row
						text listen with your friends
						span#user-count(class='badge')

				#add-track.center-align
					form#track-form(onsubmit='return false')
						.input-field
							input#track-input(placeholder='Type an artist or song...', autofocus)

			.row
				#music-queue  

		.footer.center-align
			text concocted by #[a(href='https://github.com/hariank', target='_blank') hariank]

		script(type='text/javascript', src='/dist/jquery-1.11.3.min.js')
		script(type='text/javascript', src='/dist/socket.io-1.2.0.js')
		script(type='text/javascript', src='/dist/soundcloud-api.js')
		script(type='text/javascript', src='/dist/soundcloud-sdk-2.0.0.js')
		script(type='text/javascript', src='/dist/materialize.min.js')
		script(type='text/javascript', src='/build/bundle.js')
